{
  "name": "paypro/paypro-php",
  "description": "PayPro PHP library",
  "keywords": [
    "paypro",
    "payment processing",
    "api"
  ],
  "homepage": "https://www.paypro.nl",
  "license": "MIT",
  "authors": [
    {
      "name": "PayPro BV",
      "email": "support@paypro.nl"
    }
  ],
  "require": {
    "php": "^7.2|^8.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.48",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "^8.5 || ^9.5"
  },
  "autoload": {
    "psr-4": {
      "PayPro\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PayPro\\": [
        "tests/",
        "tests/PayPro"
      ]
    }
  },
}
